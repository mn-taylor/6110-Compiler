import printf;

void main() {
  int data[8];
  int i;
  int evens;

  data[0] = 3;
  data[1] = 4;
  data[2] = 7;
  data[3] = 8;
  data[4] = 10;
  data[5] = 15;
  data[6] = 18;
  data[7] = 21;

  evens = 0;

  for (i = 0; i < 8; i = i + 1) {
    if (data[i] % 2 == 0) {
      evens = evens + 1;
    }
  }

  printf("Number of even elements = %d\n", evens);
}
